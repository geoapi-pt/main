   {{> districtQuery}}
   {{> municipalityQuery}}
   {{> parishQuery}}
   {{> cpQuery}}
   {{> locationQuery}}
</div>

{{> footer}}

<data id="index-route-data" data-indexroute="{{{obj2dataAttribute data}}}"></data>

<script type="module" src="/js/index.js"></script>

</body>
</html>
