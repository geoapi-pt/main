{
  "name": "geoapi.pt",
  "version": "1.0.4",
  "description": "Open geographical data for Portugal",
  "scripts": {
    "depcheck": "depcheck --ignores=\"depcheck,leaflet,leaflet-contextmenu,webpack-cli\" --ignore-patterns=\"res/*\"",
    "validate-openapi": "redocly lint src/public/src/openapi.yaml && lint-openapi src/public/src/openapi.yaml -e -v -r docs/ibm-lint-openapi-rules.yaml",
    "test-server-startup": "node src/server/index.js --testStartup",
    "test": "standard && npm run depcheck && npm run validate-openapi && npm run build-frontend-assets && node test/validateHtml.js && node test/mainTest.js",
    "start": "node src/server/index.js",
    "build-frontend-assets": "node src/server/buildFeAssets.js",
    "build-docs": "npm run validate-openapi && cd docs && node buildRedocTemplate.js && redocly build-docs ../src/public/src/openapi.yaml -o index.html -t redocTemplate.temp.hbs -- --features.openapi.collapseResponseSamplePanel",
    "generate-postalcodes": "node --max-old-space-size=16384 routines/generatePostalCodes/generate.js",
    "generate-admins-addresses": "node --max-old-space-size=16384 routines/admins-addresses/generate.js",
    "generate-geojsons": "cd routines/generateGeojson && node generateParishes.js && node generateMunicipalities.js && node generateDistricts.js && npm run generate-censos-sections-subsections",
    "generate-censos-sections-subsections": "node --max-old-space-size=16384 routines/censos/convertToGeoJSON.js",
    "generate-censos-data": "node --max-old-space-size=16384 routines/censos/generateCensosData.js",
    "generate-sitemap": "node routines/generateSitemap.js",
    "validate-emails": "node routines/validateEmails.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfoclpf/geoapi.pt.git"
  },
  "keywords": [
    "portugal"
  ],
  "author": "Jo√£o Pimentel Ferreira",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/jfoclpf/geoapi.pt/issues"
  },
  "homepage": "https://geoapi.pt/",
  "dependencies": {
    "@ngageoint/geopackage": "^4.2.3",
    "@turf/turf": "^6.5.0",
    "app-root-path": "^3.1.0",
    "async": "^3.2.1",
    "body-parser": "^1.19.2",
    "bootstrap": "^4.6.2",
    "colors": "^1.4.0",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^7.0.1",
    "cors": "^2.8.5",
    "csvtojson": "^2.0.10",
    "debug": "^4.3.3",
    "download": "^8.0.0",
    "express": "^4.17.3",
    "express-handlebars": "^6.0.6",
    "express-rate-limit": "^6.5.2",
    "extract-zip": "^2.0.1",
    "geojson-validation": "^1.0.2",
    "got": "^11.8.6",
    "handlebars": "^4.7.7",
    "html-minifier": "^4.0.0",
    "jszip": "^3.10.1",
    "leaflet": "^1.8.0",
    "leaflet-contextmenu": "^1.4.0",
    "nocache": "^3.0.4",
    "node-json-db": "^2.1.5",
    "outliers2d": "^2.2.1",
    "piscina": "^3.2.0",
    "polygon-lookup": "^2.6.0",
    "progress": "^2.0.3",
    "reproject": "^1.2.7",
    "sanitize-filename": "^1.6.3",
    "shapefile": "^0.6.6",
    "sitemap": "^7.1.1",
    "sphere-knn": "^1.4.0",
    "topojson-client": "^3.1.0",
    "topojson-server": "^3.0.1"
  },
  "devDependencies": {
    "@mapbox/geojsonhint": "^3.2.0",
    "@redocly/cli": "^1.0.0-beta.117",
    "copy-webpack-plugin": "^11.0.0",
    "cssnano": "^6.0.1",
    "depcheck": "^1.4.3",
    "email-verify": "^0.1.1",
    "html-validate": "^7.8.0",
    "ibm-openapi-validator": "^0.97.3",
    "node-html-parser": "^6.1.4",
    "postcss": "^8.4.23",
    "standard": "^16.0.3",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "yaml": "^2.1.3"
  },
  "standard": {
    "ignore": [
      "/src/public/dist/**/*"
    ]
  }
}
